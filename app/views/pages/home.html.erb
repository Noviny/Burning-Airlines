
<h1>Virgin Airline</h1>



<div id="main"></div>

<!-- Place template scripts below here -->


<script type="html/template" id="searchPageTemplate">
  <form id="searchFlights">
    <input type="radio" name="type" value="departure">Depart From
    <input type="radio" name="type" value="arrival">Travel To
  </form>

<!-- search bar function / input bootstrap -->
  <div class="row">
  <div class="col-lg-6">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search for flight" id="searchfield">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">Go!</button>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->

<table class="table table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Flight No.</th>
        <th>Origin</th>
        <th>Destination</th>
        <th>Plane</th>
      </tr>
    </thead>
    <tbody id="flightlist">
    </tbody>
</table>
</script>


<script type="html/template" id="listFlightTemplate">
  <tr>
    <td>{{ date }}</td>
    <td id="{{flight_no}}" class="flight_number"><a href="/#flights/{{id}}" >{{ flight_no }}</a></td>
    <td>{{ origin }}</td>
    <td>{{ destination }}</td>
    <td>{{ airplane_id}} </td>
  </tr>
</script>

<script type="html/template" id="flightViewTemplate">
  <p>{{ date }} &nbsp; {{flight_no}} &nbsp; {{ origin }} > {{ destination }} </p>
  <div class="table-responsive">
  <table id="tbl" class="table">
  </table>
  Seat Number Selected: <input id="seatNumber" disabled>
  <button class="save"> Submit </button>
  </div>
</script>


