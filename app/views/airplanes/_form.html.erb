<%= form_for @airplane, :html => { :class => "form-horizontal airplane" } do |f| %>

  <% if @airplane.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@airplane.errors.count, "error") %> prohibited this airplane from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @airplane.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :rows, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :rows, :class => 'form-control' %>
    </div>
    <%=f.error_span(:rows) %>
  </div>
  <div class="form-group">
    <%= f.label :columns, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :columns, :class => 'form-control' %>
    </div>
    <%=f.error_span(:columns) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                airplanes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
