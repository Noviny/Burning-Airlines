<%- model_class = Airplane -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="dl-horizontal">
  <strong><%= model_class.human_attribute_name(:name) %>:</strong>
  <%= @airplane.name %>
  <p><strong>Seat: </strong></p>
  <% i = 0 %>
  <% (1..@airplane.rows).each do |row| %>
    <div class="row">
      <% (1..@airplane.columns).each do |column| %>
     <div class="col-sm-2">Seat <%= i = i + 1%></div>
    <% end %>
   </div>
  <% end %>
  <br><br>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              airplanes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_airplane_path(@airplane), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              airplane_path(@airplane),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
