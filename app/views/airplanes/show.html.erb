<%- model_class = Airplane -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @airplane.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rows) %>:</strong></dt>
  <dd><%= @airplane.rows %></dd>
  <dt><strong><%= model_class.human_attribute_name(:columns) %>:</strong></dt>
  <dd><%= @airplane.columns %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              airplanes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_airplane_path(@airplane), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              airplane_path(@airplane),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
