<%= form_for @flight, :html => { :class => "form-horizontal flight" } do |f| %>

  <% if @flight.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@flight.errors.count, "error") %> prohibited this flight from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @flight.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :flight_no, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :flight_no, :class => 'form-control' %>
    </div>
    <%=f.error_span(:flight_no) %>
  </div>
  <div class="form-group">
    <%= f.label :origin, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :origin, :class => 'form-control' %>
    </div>
    <%=f.error_span(:origin) %>
  </div>
  <div class="form-group">
    <%= f.label :destination, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :destination, :class => 'form-control' %>
    </div>
    <%=f.error_span(:destination) %>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                flights_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
